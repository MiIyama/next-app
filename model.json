{
  ":name": "FrontAid CMS Example with Next.js",
  "title": { ":type": "line" },
  "index": {
    "title": { ":type": "line" },
    "content": { ":type": "text", ":richtext": true }
  },
  "pages": {
    ":items": {
      "title": { ":type": "line" },
      "path": { ":type": "line" },
      "content": {
        "type": "object",
        "properties": {
          "hero": {
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "subtitle": { "type": "string", "minLength": 1 }
            },
            "required": ["title", "subtitle"]
          },
          "footer": {
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "subtitle": { "type": "string", "minLength": 1 }
            },
            "required": ["title", "subtitle"]
          }
        },
        "required": ["hero", "footer"]
      }
    }
  }
}
